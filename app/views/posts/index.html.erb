<h1>Posts#index</h1>

<h2>Create a New Post</h2>
<%= form_for :post, url: posts_path do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<h2>All Posts</h2>
<% @posts.each do |post| %>
  <div>
    <h3><%= post.title %></h3>
    <p><%= post.content %></p>
    <%= link_to 'Edit', edit_post_path(post) %>
    <%= link_to 'Delete', post_path(post), method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>
<% end %>

